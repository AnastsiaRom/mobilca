<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/common"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/line1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvInchIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Дюймы = "/>

            <EditText
                android:id="@+id/edInch"
                android:inputType="numberDecimal"
                android:layout_width="75dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnInch"
                android:text=" перевести в см"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvInchOut"
                android:text="результат"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line2"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvGradIn"
                android:text="Градусы = "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <EditText
                android:id="@+id/edGrad"
                android:inputType="numberDecimal"
                android:layout_width="110dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnRadCalc"
                android:text="в радианы"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvRadOut"
                android:text="результат"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line3"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvRadIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Радианы = "/>

            <EditText
                android:id="@+id/edRadIn"
                android:inputType="numberDecimal"
                android:layout_width="75dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnGradCalc"
                android:onClick="onClick"
                android:text="в градусы"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvGradOut"
                android:text="результат"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line4"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvDollIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Доллары = "/>

            <EditText
                android:id="@+id/edDoll"
                android:inputType="numberDecimal"
                android:layout_width="75dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnDoll"
                android:text="в рубли"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvDollOut"
                android:text="результат"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>